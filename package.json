{
  "name": "yt-transcript-mcp",
  "version": "0.1.2",
  "description": "MCP server that fetches YouTube video transcripts using yt-dlp - supports local (stdio) and remote (HTTP/SSE) deployment",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "yt-transcript-mcp": "dist/index.js"
  },
  "files": [
    "dist/",
    "yt-dlp"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:stdio": "npm run build && node dist/index.js --stdio",
    "dev:http": "npm run build && node dist/index.js --http"
  },
  "keywords": [
    "mcp",
    "youtube",
    "transcript",
    "subtitles",
    "model-context-protocol",
    "claude",
    "ai",
    "remote",
    "sse",
    "http"
  ],
  "author": "Ali Alfredji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alialfredji/yt-transcript-mcp.git"
  },
  "homepage": "https://github.com/alialfredji/yt-transcript-mcp#readme",
  "bugs": {
    "url": "https://github.com/alialfredji/yt-transcript-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
